#!/bin/bash

set -o errexit
set -o pipefail
set -o nounset

echo "Starting Flet app in development mode..."

# Set Python path to include the app directory
export PYTHONPATH=/app:${PYTHONPATH:-}

# Change to the flet app directory
cd /app/flet_app

# Set Flet environment variables for web mode
export FLET_PORT=8550
export FLET_HOST=0.0.0.0

# Run Flet app directly with Python
exec python main.py
