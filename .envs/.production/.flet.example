# Flet Production Environment Configuration - EXAMPLE
# Copy this file to .flet (without .example) and update with production values
# DO NOT commit the actual .flet file - it should be in .gitignore

# Application Settings
FLET_APP_TITLE=GeoQR
FLET_DEBUG=false

# Backend API Configuration
# IMPORTANTE: Actualizar con la URL de producción
FLET_API_BASE_URL=https://your-production-domain.com
FLET_API_TIMEOUT=30

# Security Settings
FLET_SECURE_STORAGE=true
# IMPORTANTE: Habilitar verificación SSL en producción
FLET_VERIFY_SSL=true

# WebView Settings - Habilitados para funcionalidades nativas
# JavaScript necesario para Geolocation API, Camera API, Push Notifications
FLET_WEBVIEW_JAVASCRIPT_ENABLED=true
FLET_WEBVIEW_PREVENT_LINK=false
# Service Workers necesarios para PWA y notificaciones push
FLET_WEBVIEW_ALLOW_SERVICE_WORKERS=true

# Cache Settings
FLET_CACHE_ENABLED=true
FLET_CACHE_SIZE_MB=100
